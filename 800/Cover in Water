#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        string s;
        cin >> s;

        int dots = 0;
        for (char c : s) {
            if (c == '.') dots++;
        }

        if (dots == 0) {
            cout << 0 << '\n';
            continue;
        }

        bool hasTriple = false;
        for (int i = 0; i + 2 < n; i++) {
            if (s[i] == '.' && s[i+1] == '.' && s[i+2] == '.') {
                hasTriple = true;
                break;
            }
        }

        if (hasTriple)
            cout << 2 << '\n';
        else
            cout << dots << '\n';
    }
    return 0;
}
