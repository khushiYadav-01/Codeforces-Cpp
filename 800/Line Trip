#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        int n, x;
        cin >> n >> x;

        vector<int> a(n);
        for (int i = 0; i < n; i++) {
            cin >> a[i];
        }

        int ans = a[0];  // gap from 0 to first station

        for (int i = 1; i < n; i++) {
            ans = max(ans, a[i] - a[i - 1]);
        }

        ans = max(ans, x - a[n - 1]);          // last station to x
        ans = max(ans, 2 * (x - a[n - 1]));    // return trip critical gap

        cout << ans << "\n";
    }

    return 0;
}
